{
    "name": "mypopcornlist_front",
    "version": "1.0.0",
    "description": "Front part of the app MyPopcornList",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "quasar dev",
        "lint": "eslint -c eslint.config.js \"./src*/**/*.{js,cjs,mjs,vue}\"",
        "prettier": "prettier --write \"**/*.{js,vue,scss,html,md,json}\" --ignore-path .gitignore",
        "test": "jest --runInBand",
        "cov": "jest --coverage",
        "build": "quasar build",
        "sonar": "npm run cov && docker compose -f sonarqube/docker-compose.yaml up --build sonar-scannercicd",
        "postinstall": "quasar prepare"
    },
    "dependencies": {
        "@quasar/extras": "^1.17.0",
        "axios": "^1.9.0",
        "dateformat": "^5.0.3",
        "lodash": "^4.17.21",
        "pinia": "^3.0.2",
        "quasar": "^2.18.1",
        "stores": "^1.0.0",
        "vue": "^3.5.14",
        "vue-i18n": "^11.1.3",
        "vue-router": "^4.5.1"
    },
    "devDependencies": {
        "@babel/plugin-syntax-jsx": "^7.27.1",
        "@babel/plugin-transform-modules-commonjs": "^7.27.1",
        "@babel/preset-env": "^7.27.2",
        "@eslint/js": "^9.27.0",
        "@intlify/unplugin-vue-i18n": "^6.0.8",
        "@pinia/testing": "^1.0.2",
        "@quasar/app-vite": "^2.2.0",
        "@vue/babel-plugin-jsx": "^1.4.0",
        "@vue/babel-preset-jsx": "^1.4.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/vue3-jest": "^29.2.6",
        "autoprefixer": "^10.4.21",
        "babel-jest": "^29.7.0",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-sonarjs": "^3.0.2",
        "eslint-plugin-vue": "^10.1.0",
        "globals": "^16.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.5.3",
        "vite-plugin-checker": "^0.9.3",
        "vue-eslint-parser": "^10.1.3"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "testRegex": ".*\\.spec\\.js$",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "modulePaths": [
            "<rootDir>",
            "<rootDir>/src",
            "<rootDir>/src/components",
            "<rootDir>/src/tests"
        ],
        "transform": {
            "^.+\\.js$": [
                "babel-jest",
                {
                    "configFile": "./babel.config.cjs"
                }
            ],
            "^.+\\.vue$": "@vue/vue3-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/tests/setup.js"
        ],
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.{js,vue}",
            "!**/node_modules/**",
            "!<rootDir>/src/tests/**"
        ],
        "coverageDirectory": "<rootDir>/.coverage",
        "coverageReporters": [
            "lcov",
            "text-summary"
        ],
        "transformIgnorePatterns": [
            "/node_modules/(?!quasar|@quasar|@babel|@vue)"
        ],
        "testEnvironmentOptions": {
            "customExportConditions": [
                "node",
                "node-addons"
            ]
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "engines": {
        "node": ">= 22.0.0",
        "npm": ">= 10.0.0"
    }
}
